{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,

		"typeRoots": [
			"./node_modules/@types",
			"./source/typings",
		],
		"rootDir": "./source",
		"outDir": "./output",
	},
	"include": [
		"source/**/*.ts",
		"source/**/*.js",
	]
}
